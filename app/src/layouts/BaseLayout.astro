interface Props {
  title?: string;
}

const { title = "Astro Shield Testbed" } = Astro.props satisfies Props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="robots" content="noindex,nofollow" />
    <slot name="head" />
    <style>
      :root {
        color-scheme: light dark;
        font-family: "Open Sans", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
          "Helvetica Neue", Arial, sans-serif;
      }

      body {
        margin: 0;
        min-height: 100vh;
        display: grid;
        place-items: center;
        background: radial-gradient(circle at top, #1a2332, #0b1018);
        color: rgb(226 232 240);
      }

      main {
        width: min(600px, 90vw);
        display: grid;
        gap: 1.5rem;
        padding: 2.5rem;
        border-radius: 18px;
        background: rgba(15, 23, 42, 0.85);
        box-shadow: 0 25px 80px rgba(15, 23, 42, 0.65);
        backdrop-filter: blur(24px);
      }

      a {
        color: rgb(96 165 250);
      }

      code {
        font-family: "Fira Code", ui-monospace, SFMono-Regular, SFMono-Regular,
          Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 0.95rem;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <slot name="scripts" />
  </body>
</html>
